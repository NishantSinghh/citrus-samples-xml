<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:citrus="http://www.citrusframework.org/schema/config"
       xmlns:citrus-mail="http://www.citrusframework.org/schema/mail/config"
       xmlns:citrus-jms="http://www.citrusframework.org/schema/jms/config"
       xmlns:citrus-http="http://www.citrusframework.org/schema/http/config"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd
       http://www.citrusframework.org/schema/config http://www.citrusframework.org/schema/config/citrus-config.xsd
       http://www.citrusframework.org/schema/mail/config http://www.citrusframework.org/schema/mail/config/citrus-mail-config.xsd
       http://www.citrusframework.org/schema/jms/config http://www.citrusframework.org/schema/jms/config/citrus-jms-config.xsd
       http://www.citrusframework.org/schema/http/config http://www.citrusframework.org/schema/http/config/citrus-http-config.xsd">

    <context:property-placeholder location="classpath:citrus.properties"/>

    <citrus:global-variables>
        <citrus:variable name="project.name" value="Citrus Bakery sample"/>
    </citrus:global-variables>
    
    <!-- Listeners -->
    <bean class="com.consol.citrus.report.MessageTracingTestListener"/>

    <!-- JMS connection factory and message broker -->
    <bean id="connectionFactory" class="org.apache.activemq.ActiveMQConnectionFactory">
      <property name="brokerURL" value="tcp://${activemq.server.host}:${activemq.server.port}" />
      <property name="watchTopicAdvisories" value="false"/>
    </bean>

    <!-- Order Http inbound endpoint -->
    <citrus-http:client id="bakeryClient"
                        request-url="http://${bakery.server.host}:${bakery.server.port}/bakery/services"/>
  
    <!-- Order Inbound endpoint -->
    <citrus-jms:endpoint id="bakeryOrderEndpoint"
                         destination-name="bakery.order.inbound"/>

    <!-- Unknown order types result in this inbound endpoint -->
    <citrus-jms:endpoint id="unknownOrderEndpoint"
                         destination-name="factory.unknown.inbound"/>

    <!-- Reporting client -->
    <citrus-http:client id="reportingClient"
                        request-method="GET"
                        request-url="http://${report.server.host}:${report.server.port}/report/services"/>

    <!-- Mail server receiving report mails -->
    <citrus-mail:server id="mailServer"
                      port="${mail.server.port}"
                      auto-accept="true"
                      auto-start="true"/>
</beans>
